{
	"name": "@brlt/prettier",
	"version": "1.6.0",
	"license": "MIT",
	"author": {
		"name": "Nicholas Berlette",
		"email": "nick@berlette.com",
		"url": "https://berlette.com"
	},
	"type": "commonjs",
	"packageManager": "pnpm@6.32.3",
	"publishConfig": {
		"access": "public"
	},
	"description": "Prettier configurations used in my projects.",
	"repository": "nberlette/prettier",
	"keywords": [
		"prettier",
		"config",
		"format",
		"lint",
		"svelte",
		"vue",
		"bash",
		"jsx",
		"tsx",
		"esm"
	],
	"files": [
		"index.js",
		"base.js",
		"bash.js",
		"svelte.js",
		"vue.js"
	],
	"main": "./index.js",
	"exports": {
		".": "./index.js",
		"./base": "./base.js",
		"./bash": "./bash.js",
		"./svelte": "./svelte.js",
		"./vue": "./vue.js"
	},
	"scripts": {
		"lint": "prettier --check '**/*.{ts,d.ts,js,json,md,yml,yaml}'",
		"format": "prettier --write '**/*.{ts,d.ts,js,json,md,yml,yaml}'",
		"version": "npm version --no-commit-hooks --sign-git-tag --allow-same-version",
		"prepublishOnly": "npm run format && npm run version patch"
	},
	"devDependencies": {
		"prettier": "2.6.0"
	}
}
