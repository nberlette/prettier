{
	"name": "@brlt/prettier",
	"version": "1.7.0",
	"license": "MIT",
	"author": {
		"name": "Nicholas Berlette",
		"email": "nick@berlette.com",
		"url": "https://github.com/nberlette"
	},
	"packageManager": "pnpm@7.1.0",
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"svelte"
			]
		}
	},
	"private": false,
	"publishConfig": {
		"access": "public",
		"directory": "./dist"
	},
	"scripts": {
		"prettier": "prettier --ignore-path=.gitignore --no-error-on-unmatched-pattern",
		"lint": "nr prettier --check '**/*.{js,jsx,ts,tsx}'",
		"format": "nr prettier --write '**/*.{js,jsx,ts,tsx}'",
		"preversion": "nr lint",
		"version": "nr format && git add --all",
		"postpublish": "npx rimraf node_modules",
		"publish:npm": "np --registry=https://registry.npmjs.org --no-git-checks --no-commit-hooks --allow-same-version",
		"release": "npx -y bumpp --tag 'ðŸ“¦ %s' --commit --push && nr publish:npm"
	},
	"repository": "nberlette/prettier",
	"homepage": "https://npmjs.com/package/@brlt/prettier",
	"readme": "https://github.com/nberlette/prettier#readme",
	"bugs": "https://github.com/nberlette/prettier/issues",
	"description": "My personal prettier-config rules for Bash, React, Svelte, and Vue projects.",
	"keywords": [
		"prettier",
		"config",
		"format"
	],
	"files": [
		"index.d.ts",
		"index.js",
		"bash.js",
		"react.js",
		"svelte.js",
		"vue.js"
	],
	"main": "index.js",
	"types": "index.d.ts",
	"exports": {
		".": {
			"types": "./index.d.ts",
			"require": "./index.js",
			"import": "./index.js"
		},
		"./bash": "./bash.js",
		"./react": "./react.js",
		"./svelte": "./svelte.js",
		"./index.js": "./index.js",
		"./base": "./index.js",
		"./vue": "./vue.js",
		"./vue.js": "./vue.js",
		"./bash.js": "./bash.js",
		"./react.js": "./react.js",
		"./svelte.js": "./svelte.js",
		"./index.d.ts": "./index.d.ts",
		"./package.json": "./package.json"
	},
	"devDependencies": {
		"@brlt/n": "0.1.1",
		"@types/prettier": "2.6.0",
		"pnpm": "^7.1.0",
		"prettier": "2.6.0"
	},
	"dependencies": {
		"prettier-plugin-sh": "^0.11.0",
		"prettier-plugin-svelte": "^2.7.0"
	},
	"peerDependencies": {
		"prettier": "*"
	}
}
